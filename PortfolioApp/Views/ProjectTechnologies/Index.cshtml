@model IEnumerable<PortfolioApp.ViewModel.TechnologyProjectVM>

@{
    ViewData["Title"] = "Portfolio Projects";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
     <br />
    <a asp-controller="InterviewRequest" asp-action="Index">Request an Interview</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Project.Title)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Project.Title, "Details", new { id = item.Project.ProjectId })
                </td>
            </tr>
        }
    </tbody>
</table>